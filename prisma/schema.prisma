generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Post {
  id       Int    @id @default(autoincrement())
  title    String
  content  String
  author   User  @relation(fields: [authorId], references: [id])
  authorId Int
}

model User {
  id           Int     @id @default(autoincrement())
  email        String  @unique
  passwordHash String
  posts        Post[]
}
